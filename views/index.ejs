<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900 text-white">
        <div class="form text-white p-10">
            <form action="/create" method="post">
                <input class="block px-5 py-4 bg-zinc-800 w-full rounded-md outline-none" type="text" placeholder="write the title" name="title">
                <textarea class="block px-5 py-4 bg-zinc-800 resize-none mt-2 w-full rounded-md outline-none" name="details" placeholder="write the message here"></textarea>
                <input class=" mt-2 bg-blue-600 rounded-md px-5 py-2" type="submit" value="create task">
            </form>
        </div>
        <div class="tasks p-10 flex gap-3 flex-wrap">
            <% if(files.length>0){ %>
                <% files.forEach((val)=>{ %>
                    <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-md ">
                        <h1 class="text-white text-xl tracking-tighter"><%= val %></h1>
                        <div class="flex w-full justify-between item-center">
                        <a class="text-blue-500 inline-block " href="/files/<%= val %>">read more..</a>
                        <a class="text-zinc-600 " href="/edit/<%= val %>">Edit Filename</a>
                    </div>
                </div>
              
               <% })%>
            <% } else { %>
                <h3 class="text-zinc-600">no tasks yet</h3>
            <% } %>
           
    </div>
    
        </div>
    </div>
</body>
</html>